<div class="slides-container">
  <div class="slide" id="slide-1">
    <div class="centered">
      <h1>Welcome to Savvy budget</h1>
      <% if logged_in? %>
        <p> Welcome back to your <a href="/app"><%= current_budget.title %></a> 
          <form action="/session" method="post">
            <input type="hidden" name="_method" value="delete">
            <div class="index-button">
              <button>Log out</button>
            </div>
          </form>
        </p>
      <% else %>
        <nav><a href="#slide-3">Try Me!</a></nav>
        <p>Let's go to <span class="go-next">Your budget</span>.</p>
      <% end %>
    </div>
  </div>

  <div class="slide" id="slide-2">
    <div class="centered">
      <h1>Log into your budget</h1>
      <p>
        <form action="/session" method="post">
          <div class="budget-title">
            <label for="title">Your budget</label>
            <input type="text" name="title">
          </div>
          <div class="budget-password">
            <label for="password">password</label>
            <input type="password" name="password">
          </div>
          <div class="index-button">
            <button>Go to my budget</button>
          </div>
        </form>
      </p>

      <p>go back to <span class="go-prev">Home page</span>.</p>

    </div>
  </div>
  <div class="slide" id="slide-3">
    <div class="centered">
      <p><nav><a href="#slide-1">Go back</a></nav>.</p>
      <p>go to the <span class="go-next">next slide</span>.</p>

    </div>
  </div>
  <div class="slide" id="slide-4">
    <div class="centered">
      <form action="/budgets" method="post">
        <div class="budget-title">
          <label for="title">Your budget</label>
          <input type="text" name="title">
        </div>
        <div class="budget-password">
          <label for="password">password</label>
          <input type="password" name="password">
        </div>
        <div class="budget-budget">
          <label for="budget">budget</label>
          <input type="number" step="0.01" name="budget">
        </div>
        <div class="index-button">
          <button>Create</button>
        </div>
      </form>
      <p>You can go back to <span class="go-prev">previous slide</span>.</p>
    </div>
  </div>
</div>

